<h1>New Customer</h1>
	<%= form_for (@customer) do |f| %>
		Name: <%= f.text_field :name %>
		Email: <%= f.text_field :email %>
		Phone: <%= f.text_field :phone %>
		Password: <%= f.password_field :password %>
		<%= f.submit "Add customer" %>
	<% end %>
<%= link_to "Back to Customer List", customers_path %>
