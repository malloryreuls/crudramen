
<%= form_for [@customer, @ramen] do |f| %>
		Noodle:<%= f.select :noodles, [['soft', 'soft'], ['medium', 'medium'], ['hard', 'hard'], ['crunchy?', 'crunchy?']], class:'form-control input-lg' %>
		Broth:<%= f.select :broth, [['light', 'light'], ['medium', 'medium'], ['heavy', 'heavy']] %>
		Spicy:<%= f.select :spicy, [['mild', 'mild'], ['medium', 'medium'], ['hot', 'hot']] %>
		<br>
		Egg:<%=  f.check_box :egg, class: 'checkbox'%>
		Bean Sprouts:<%=  f.check_box :bean_sprouts, class: 'checkbox'%>
		Mushrooms:<%=  f.check_box :mushrooms, class: 'checkbox'%>
		Broccoli:<%=  f.check_box :broccoli, class: 'checkbox'%>
		Corn:<%=  f.check_box :corn, class: 'checkbox'%>
		Spicy Miso:<%=  f.check_box :spicy_miso, class: 'checkbox'%>
		Extra Pork:<%=  f.check_box :extra_pork, class: 'checkbox'%>
		<%= f.submit "Add to order" %>
	<% end %>